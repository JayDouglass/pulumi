def lint_targets():
    dirs = ["pkg", "sdk", "tests"]
    for dir in dirs:
        @target(name=f"lint_{dir}", sources=go_sources(dir))
        def lint():
            sh.exec(f"pushd {dir}; golangci-lint run -c ../.golangci.yml --timeout 5m; popd;")
    return [f":lint_{dir}" for dir in dirs]

